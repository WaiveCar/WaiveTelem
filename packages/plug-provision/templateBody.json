{
  "Parameters": {
    "ThingName": {
      "Type": "String"
    },
    "CSR": {
      "Type": "String"
    }
  },
  "Resources": {
    "thing": {
      "Type": "AWS::IoT::Thing",
      "Properties": {
        "ThingName": { "Ref": "ThingName" },
        "ThingTypeName": "type-plug-wifi",
        "ThingGroups": ["plug-group"]
      }
    },
    "certificate": {
      "Type": "AWS::IoT::Certificate",
      "Properties": {
        "CertificateSigningRequest": { "Ref": "CSR" },
        "Status": "ACTIVE"
      }
    }
  }
}
